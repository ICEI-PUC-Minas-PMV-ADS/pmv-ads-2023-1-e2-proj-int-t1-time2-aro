@using Microsoft.AspNetCore.Identity;

@inject UserManager<Usuario> UserManager;

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-succes my-2 my-sm-0" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i>Login
    </a>
    <span style="padding: 5px"></span>

    <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-plus"></i>Registre-se
    </a>
}
else
{
    @*Sessão botão de login*@
    <div class="dropdown">
        <button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown"
                aria-expanded="false">
            <i class="bi bi-person-badge"></i> Olá @UserManager.GetUserName(User)
        </button>
        <ul class="dropdown-menu" aria-labelledby="profile-btn">
            <li>
                <a class="dropdown-item" asp-controller="Pedidos" asp-action="Index">
                    <i class="bi bi-list"></i> Pedidos
                </a>
            </li>

            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="Users">
                        <i class="bi bi-people"></i> Usuarios
                    </a>
                </li>
            }
        </ul>
    </div>

    <span style="padding: 5px"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-box-arrow-in-right"></i>Logout
        </button>
    </form>
    
}


