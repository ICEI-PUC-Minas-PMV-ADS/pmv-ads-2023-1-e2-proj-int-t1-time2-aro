@model CategoriaVM

@{
    ViewData["Title"] = "Editando categoria";
    var imagemPath = "~/img/" + (Model.ImagemUrl ?? "no-image.png");
}

<div class="row text">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <p>
            <h1>Editar categoria</h1>
        </p>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <form enctype="multipart/form-data" asp-action="Editar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <textarea rows="5" asp-for="Descricao" class="form-control"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImagemUpload" class="control-label"></label>
                        <input asp-for="ImagemUpload" class="form-control" />
                    </div>
                    <div class="text-center">
                        <img src="@imagemPath" asp-append-version="true" style="max-width: 200px; max-height: 200px" />
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Editar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>