@model CategoriaVM

@{
    ViewData["Title"] = "Adicionando categoria";
}

<div class="row text">
    <div class="col"></div>
    <div class="col-md-8">
        <p>
            <h1>Adicionar uma nova categoria</h1>
        </p>
        <div class="row">
            <div class="col"></div>
            <div class="col-md-8">
                <form enctype="multipart/form-data" asp-action="Criar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <textarea rows="5" asp-for="Descricao" class="form-control"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label asp-for="ImagemUpload" class="control-label"></label>
                            <input asp-for="ImagemUpload" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Criar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
            <div class="col"></div>
        </div>
    </div>
    <div class="col"></div>
</div>