@model CategoriaVM

@{
    ViewData["Title"] = "Deletando categoria";
    var imagemPath = "~/img/" + (Model.ImagemUrl ?? "no-image.png");
}

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <p>
            <h4>Confirmação para deletar @Model.Nome</h4>
        </p>

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <form asp-action="Deletar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" readonly />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 form-group">
                            <label asp-for="Descricao" class="control-label"></label>
                            <textarea asp-for="Descricao" rows="5" class="form-control" readonly></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-center">
                        <img src="@imagemPath" asp-append-version="true" style="max-width: 200px; max-height: 200px" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Deletar" class="btn btn-danger float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Cancelar</a>
                    </div>

                </form>
            </div>

            <div class="col-md-2"></div>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>