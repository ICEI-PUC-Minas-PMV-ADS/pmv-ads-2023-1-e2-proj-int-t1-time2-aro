<style>

    h1 span {
        position: relative;
        top: 10px;
        left: 10px;
        display: inline-block;
        color: #040404;
    }

    h2 {
        font-size: 17px;
        text-align: center;
    }


    .div-slider {
        width: auto;
        height: 400px;
        text-align: center;
    }

    .slides-front {
        padding: 0;
        width: 980px;
        height: 370px;
        display: block;
        margin: auto;
        position: relative;
    }

        .slides-front * {
            user-select: none;
            -ms-user-select: none;
            -moz-user-select: none;
            -webkit-user-select: none;
            -webkit-touch-callout: none;
        }

        .slides-front input {
            display: none;
        }

    .slide-container {
        display: block;
    }

    .slide {
        top: 0;
        opacity: 0;
        width: 980px;
        height: 370px;
        display: block;
        position: absolute;
        transform: scale(0);
        transition: all .7s ease-in-out 0.1s;
    }

        .slide img {
            width: 95%;
            height: 95%;
        }

    .nav label {
        width: 90px;
        height: 100%;
        display: none;
        position: absolute;
        opacity: 0;
        z-index: 9;
        cursor: pointer;
        transition: opacity .2s;
        color: #FFF;
        font-size: 130pt;
        text-align: center;
        line-height: 380px;
        font-family: "Varela Round", sans-serif;
        background-color: rgba(255, 255, 255, .3);
        text-shadow: 0px 0px 15px rgb(119, 119, 119);
    }

    .slide:hover + .nav label {
        opacity: 0.5;
    }

    .nav label:hover {
        opacity: 1;
    }

    .nav .next {
        right: 0;
    }

    input:checked + .slide-container .slide {
        opacity: 1;
        transform: scale(1);
        transition: opacity 1s ease-in-out 0.1s;
    }

    input:checked + .slide-container .nav label {
        display: block;
    }

    .nav-dots {
        width: 100%;
        bottom: 9px;
        height: 11px;
        display: block;
        position: relative;
        text-align: center;
    }

        .nav-dots .nav-dot {
            top: 375px;
            width: 11px;
            height: 11px;
            margin: 0 4px;
            position: relative;
            border-radius: 100%;
            display: inline-block;
            background-color: rgba(0, 0, 0, 0.6);
        }

            .nav-dots .nav-dot:hover {
                cursor: pointer;
                background-color: rgba(0, 0, 0, 0.8);
            }

    input#img-1:checked ~ .nav-dots label#img-dot-1,
    input#img-2:checked ~ .nav-dots label#img-dot-2,
    input#img-3:checked ~ .nav-dots label#img-dot-3,
    h3 {
        font-family: effra,Helvetica,Arial,sans-serif;
        font-size: 17px;
        text-align: center;
    }

    .wrapper {
        width: 100%;
        padding-top: 20px;
        text-align: center;
        position: relative;
    }

    .carousel-card {
        width: 95%;
        padding-top: 10px;
        margin: 0px auto;
        overflow: hidden;
    }

    .slick-slide {
        margin: 10px;
    }

        .slick-slide img {
            width: 100%;
            border: 2px solid #fff;
        }


    .framework-card {
        display: inline-block;
        background: #fff;
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        padding-top: 3rem;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        margin: 0 1rem;
        height: 400px;
        overflow: hidden;
    }

        .framework-card img {
            height: 80px;
            width: 100%;
            object-fit: contain;
        }

        .framework-card p {
            font-family: 'radnika-next';
            font-weight: 900;
            background: #f1d7ff;
        }

    @@media screen and (max-width: 600px) {
        .framework-card {
            height: 350px;
        }
    }

</style>

